wfn=*.fchk
state=(1 2)
[hole-ele]
state ${state}
%process
cub
%command
#!/bin/bash
mv hole.cub ${input}_s${state}_hole.cub
mv electron.cub ${input}_s${state}_ele.cub
sed -n '/Integral of hole/,/Excitation energy of this state/p' hole-ele_${input}.out > hole${state}data_${input}.txt
cat << EOF > hole.bat
vmd -e hole.vmd
EOF
cat << EOF2 > hole.vmd
vcube *.cub
EOF2
end

